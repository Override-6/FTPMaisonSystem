<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="fr.linkit.engine.internal.system.log">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false"
                           pattern="%style{[%d{HH:mm:ss,SSS}]}{magenta} [%-28.28t] [%highlight{%-5p}{FATAL=red, ERROR=red, WARN=light yellow, INFO=light blue, DEBUG=green, TRACE=blank} _ %-12logger] %stack{>,?} %style{-}{blank} %highlight{%m%n}{FATAL=red, ERROR=red, WARN=light yellow, INFO=light blue, DEBUG=green, TRACE=blank}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="Application" level="ALL" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="GNOM" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="GNOM.ConnObj" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="GNOM.CO.Inv" level="OFF" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Mappings" level="DEBUG" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Persistence" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Traffic" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Resource" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Compilation" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Worker" level="INFO" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="Connection" level="DEBUG" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-->Debug logger used to print stuff that are not pertinent for the user and that must be removed once the bug is fixed</!-->
        <Logger name="Debug" level="ALL" additivity="false" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="ALL" includeLocation="false">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>